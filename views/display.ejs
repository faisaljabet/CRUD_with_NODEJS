<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display</title>
</head>
<body>
    <div class="container">
        <form action="/" method="post">
            <input type="text" placeholder="name" name="name">
            <input type="text" placeholder="email" name="email">
            <input type="submit" value="submit">
        </form>
    </div>
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Update</th>
        </tr>
        <% if(user_info.length > 0){ %>
        <% for(var i=0; i<user_info.length; i++){ %>
        <tr>
            <td><%- user_info[i].user_id %></td>
            <td><%- user_info[i].user_name %></td>
            <td><%- user_info[i].user_email %></td>
            <td><a href="/update?id=<%- user_info[i].user_id %>" target="_blank">Update</a></td>
            <td><a href="/delete?id=<%- user_info[i].user_id %>" target="_blank">Delete</a></td>
        </tr>
        <% } %>
        <% } else { %>
        <h1>Data not found </h1>
        <% } %>

    </table>
</body>
</html>